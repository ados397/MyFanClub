<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/red_line_top"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gradient_red"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/font_title"
            android:gravity="center"
            android:text="LEVEL UP"
            android:textColor="#9A0523"
            android:textSize="12sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/text_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/font_title"
            android:gravity="center"
            android:text="Lv. 99"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:shadowColor="#D1D86F"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="15.0" />
    </LinearLayout>

    <LinearLayout
        android:background="#313A49"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/font_sub_title"
                android:text="팬클럽 멤버 수"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_members_old"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:fontFamily="@font/font_sub_title"
                android:text="1,485"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:src="@drawable/arrow_right_blue"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/text_members_new"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:fontFamily="@font/font_sub_title"
                android:text="1,500"
                android:textColor="@color/master"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp">

                <ImageView
                    android:id="@+id/img_members_up"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_up_yellow"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/font_sub_title"
                android:text="팬클럽 스케줄 수"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_schedule_old"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:fontFamily="@font/font_sub_title"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:src="@drawable/arrow_right_blue"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/text_schedule_new"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:fontFamily="@font/font_sub_title"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp">

                <ImageView
                    android:id="@+id/img_schedule_up"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/arrow_up_yellow"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/font_sub_title"
                android:text="획득 가능 출석 다이아"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_checkout_gem_old"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:fontFamily="@font/font_sub_title"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:src="@drawable/arrow_right_blue"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/text_checkout_gem_new"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingRight="10dp"
                android:gravity="right"
                android:fontFamily="@font/font_sub_title"
                android:text="11"
                android:textColor="@color/master"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="16dp">
                <ImageView
                    android:id="@+id/img_checkout_gem_up"
                    android:visibility="visible"
                    android:src="@drawable/arrow_up_yellow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_added_option"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/star"
                android:layout_marginRight="10dp"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:id="@+id/text_added_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/font_sub_title"
                android:text="더욱 많은 출석 보상 획득이 가능합니다."
                android:textColor="@color/master"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="15dp"
            android:background="#BC6B72" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_level_up_fan_club_ok"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:background="@drawable/btn_round8"
            android:fontFamily="@font/font_title"
            android:text="확인"
            android:textColor="@color/text_gold" />


    </LinearLayout>

    <ImageView
        android:src="@drawable/red_line_bottom"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>