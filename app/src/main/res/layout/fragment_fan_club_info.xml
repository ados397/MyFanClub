<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.FragmentFanClubInfo">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="팬클럽 명"
                    android:textColor="@color/text"
                    app:autoSizeMaxTextSize="30dp"
                    app:autoSizeMinTextSize="10dp"
                    app:autoSizeStepGranularity="1dp"
                    app:autoSizeTextType="uniform" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_settings"
                    android:checkable="true"
                    app:cardElevation="0dp"
                    app:rippleColor="#fff"
                    android:backgroundTint="@android:color/transparent"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_settings"
                        android:src="@drawable/settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_round4"
                android:fontFamily="@font/font"
                android:textSize="16dp"
                android:text="변경"
                android:textColor="@color/text" />

            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_symbol"
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/reward_icon_25" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_modify_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_round4"
                        android:fontFamily="@font/font"
                        android:textSize="16dp"
                        android:text="변경"
                        android:textColor="@color/text" />

                    <TextView
                        android:id="@+id/text_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round5"
                        android:fontFamily="@font/font"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Lv. 99"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_image"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp">

                    <!-- <TextView
                        android:id="@+id/text_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round5"
                        android:fontFamily="@font/font"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Lv. 99"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ProgressBar
                        android:id="@+id/progress_percent_"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/button_donation"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/text_exp_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/font"
                        android:text="300/500"
                        android:textColor="@color/text" /> -->

                    <LinearLayout
                        android:id="@+id/layout_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_round3"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/font"
                                android:textSize="16dp"
                                android:text="현재출석"
                                android:textColor="@color/text" />

                            <TextView
                                android:id="@+id/text_checkout_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/font"
                                android:text="0"
                                android:textColor="#0088F3"
                                android:textSize="20dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/font"
                                android:textSize="16dp"
                                android:text="명"
                                android:textColor="@color/text" />

                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/button_checkout"
                            android:layout_width="130dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:clickable="true"
                            app:cardElevation="0dp"
                            app:rippleColor="#fff">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_round4"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/medal_icon_02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/font"
                                    android:textSize="18dp"
                                    android:text="출석체크"
                                    android:textColor="@color/text" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/button_donation"
                            android:layout_width="130dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:clickable="true"
                            app:cardElevation="0dp"
                            app:rippleColor="#fff">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_round4"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/donation" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/font"
                                    android:textSize="18dp"
                                    android:text="기부"
                                    android:textColor="@color/text" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/button_reward"
                            android:layout_width="130dp"
                            android:layout_height="34dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@android:color/transparent"
                            android:clickable="true"
                            app:cardElevation="0dp"
                            app:rippleColor="#fff">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_round4"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/diamond" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/font"
                                    android:textSize="18dp"
                                    android:text="보상받기"
                                    android:textColor="@color/text" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progress_percent"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/button_donation"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="50" />

                <TextView
                    android:id="@+id/text_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:fontFamily="@font/font"
                    android:textSize="14dp"
                    android:text="300/500"
                    android:textColor="@color/text" />
            </LinearLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:fontFamily="@font/font"
                    android:text="공지사항"
                    android:textColor="@color/text"
                    android:textSize="20dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/button_send_notice"
                    android:layout_width="170dp"
                    android:layout_height="34dp"
                    android:layout_toRightOf="@+id/text_notice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@android:color/transparent"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:rippleColor="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_round4"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ads" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/font"
                            android:textSize="18dp"
                            android:text="전체 공지 발송"
                            android:textColor="@color/text" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_modify_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_round4"
                    android:fontFamily="@font/font"
                    android:text="변경"
                    android:textColor="@color/text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/text_notice_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_notice"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/edit_rectangle_read_only"
                    android:focusable="false"
                    android:fontFamily="@font/font"
                    android:maxLines="10"
                    android:minLines="4"
                    android:scrollbars="vertical"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/text"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_members"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="내 정보"
                    android:textColor="@color/text"
                    android:textSize="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/text_members"
                    card_view:cardCornerRadius="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layout_position"
                        android:orientation="horizontal"
                        android:background="#FF8C00"
                        android:layout_margin="-10dp"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:id="@+id/layout_card_view"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="13dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/text_member_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/btn_round5"
                                    android:fontFamily="@font/font"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:text="Lv. 99"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/text_member_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/font"
                                    android:maxLines="1"
                                    android:text="이름"
                                    android:textColor="@color/text"
                                    android:textSize="18dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/img_position"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/medal_icon_09" />

                                    <TextView
                                        android:id="@+id/text_position"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/font"
                                        android:text="클럽장"
                                        android:textColor="@color/text"
                                        android:textSize="16dp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/text_contribution"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:fontFamily="@font/font"
                                    android:text="기여도 : 100"
                                    android:textColor="@color/exp"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/text_member_checkout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/font"
                                        android:textSize="16dp"
                                        android:text="출석체크"
                                        android:textColor="@color/text" />

                                    <ImageView
                                        android:id="@+id/img_checkout"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:src="@drawable/checked" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/font"
                                    android:maxLines="1"
                                    android:text="가입일"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/text_response_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/font"
                                    android:maxLines="1"
                                    android:text="[ 2021-09-20 10:59 ]"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edit_about_me"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/text_notice"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/edit_rectangle_read_only"
                                    android:focusable="false"
                                    android:fontFamily="@font/font"
                                    android:maxLines="10"
                                    android:minLines="1"
                                    android:scrollbars="vertical"
                                    android:textColor="@color/text"
                                    android:textCursorDrawable="@drawable/edit_cursor"
                                    android:textSize="18dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <View
                android:layout_marginBottom="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>